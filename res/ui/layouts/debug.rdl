        #     size: 300, 300
        #     caption: "Checkpoints"

        Panel
            userCanResize: true
            regionAlign: left
            size: 300, 300
            caption: "Frames"

        Panel
            userCanResize: true
            regionAlign: client
            size: 300, 300
            caption: "Variables"

    Panel
        regionAlign: client
        tabVisibleRule: "tabButtonProfile"

        Panel
            userCanResize: true
            regionAlign: left
            size: 300, 300
            caption: "Profile"

        Panel
            userCanResize: true
            regionAlign: left
            size: 300, 300
            caption: "Threads"

        Panel
            userCanResize: true
            regionAlign: client
            size: 300, 300
            caption: "Memory"
