Panel
    name: "panelTerminal"
    userCanResize: true
    regionAlign: bottom
    size: 200, 200
    finalFocusRegion: true
    darkSplit: true
    finalFocus: true
    background: action
    minSize: 150, 150
    isVisible: false

    TabLayout
        orientation: horizontal
        height: 21
        regionAlign: top
        margin: 5

        TabButton
            checked: true
            caption: "Terminal"
            width: 100
            name: "tabButtonTerminal"
            icons: "tape"

        TabButton
            checked: false
            caption: "Commands registry"
            width: 100
            name: "tabButtonCommands"
            icons: "clock"

    Panel
        regionAlign: client
        tabVisibleRule: "tabButtonTerminal"

        Panel
            regionAlign: bottom
            background: action
            padding: 5
            heightType: wrapContent

            ChainLayout
                widthType: matchParent

                TextInput widthType: matchParent name: "inputCommand"
                Button caption: "Execute" widthType: wrapContent name: "buttonExecuteCommand"

        Panel
            regionAlign: client
            padding: 5
            name: "panelCommands"
            reverseScrollY: true

            ListMenu
                isPopup: false
                widthType: matchParent
                heightType: wrapContent

                ListMenuItem caption: "Command 1" icons: "triangle"
