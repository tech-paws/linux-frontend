Panel
    regionAlign: top
    userCanResize: false
    heightType: wrapContent
    background: action

    StackLayout
        orientation: horizontal
        widthType: matchParent

        MainMenu
            MainMenuItem
                margin: 2
                caption: "File"

                ListMenu
                    size: 225, 200
                    isPopup: true

                    ListMenuItem caption: "User preferences" shortcut: "Ctrl+Alt+U" icons: "preferences"
                    ListMenuItemsDivider
                    ListMenuItem caption: "Quit" shortcut: "Ctrl+Q" icons: "quit"

            MainMenuItem
                margin: 2
                caption: "Help"

                ListMenu
                    isPopup: true
                    widthtype: wrapContent
                    size: 200, 200

                    ListMenuItem caption: "Manual" icons: "manual" shortcut: "F1"
                    ListMenuItemsDivider
                    ListMenuItem caption: "Web Site" icons: "web"
                    ListMenuItemsDivider
                    ListMenuItem caption: "Splash Screen" icons: "info"

Panel
    userCanResize: true
    regionAlign: right
    align: center
    locationAlign: center
    size: 300, 300
    position: 100, 0
    finalFocusRegion: true
    darkSplit: true
    finalFocus: true
    background: action
    minSize: 200, 200

    Panel
        caption: "Components"
        userCanHide: true
        userCanResize: true
        regionAlign: top
        background: light
        position: 0, 0
        size: 0, 250
        padding: 5
        minSize: 100, 200

        TreeList
            size: 200, 100
            widthType: matchParent
            heightType: wrapContent

            TreeListNode
                caption: "Room"
                icons: "grid"

                TreeListNode
                    caption: "Object 1 <Player>"
                    icons: "sprite"

                TreeListNode
                    caption: "Object 2 <Wall>"
                    icons: "sprite"

                TreeListNode
                    caption: "Object 3 <Wall>"
                    icons: "sprite"

                TreeListNode
                    caption: "Prefab 1"
                    icons: "ghost"

                    TreeListNode
                        caption: "Object 4"
                        icons: "sprite"

                    TreeListNode
                        caption: "Point 1"
                        icons: "point"

                    TreeListNode
                        caption: "Point 2"
                        icons: "point"

                TreeListNode
                    caption: "Light"
                    icons: "sun"

    TabLayout
        orientation: horizontal
        height: 21
        regionAlign: top
        margin: 5

        TabButton
            name: "tabButtonProperties"
            checked: true
            caption: "Properties"
            widthType: wrapContent
            icons: "settings"
            hideCaptionWhenUnchecked: true

    Panel
        name: "propertiesPanel"
        userCanResize: false
        regionAlign: top
        background: light
        position: 0, 0
        size: 0, 200
        padding: 5
        minSize: 150, 200
        isVisible: true
        heightType: wrapContent
        finalFocus: true

        StackLayout
            widthType: matchParent

            Label caption: "Id" size: 20, 20 margin: 4, 0

            TextInput text: "Object 1" widthType: matchParent

            Label caption: "Entity" size: 20, 20 margin: 4, 0

            TextInput text: "" widthType: matchParent

            Label caption: "Position" size: 20, 20 margin: 4, 0

            ChainLayout
                widthType: matchParent
                margin: 4, 0

                TextInput text: "0" widthType: matchParent prefix: "X:" postfix: "px" inputType: integer
                TextInput text: "0" widthType: matchParent prefix: "Y:" postfix: "px" inputType: integer

            Label caption: "Size" size: 20, 20 margin: 4, 0

            ChainLayout
                widthType: matchParent
                margin: 4, 0

                TextInput text: "0" widthType: matchParent prefix: "X:" postfix: "px" inputType: integer
                TextInput text: "0" widthType: matchParent prefix: "Y:" postfix: "px" inputType: integer

            Label caption: "Rotation" size: 20, 20 margin: 4, 0

            TextInput text: "0" widthType: matchParent postfix: "deg" inputType: integer

Canvas
    name: "canvas"
    regionAlign: client
